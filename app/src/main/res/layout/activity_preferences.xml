<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.clipboardsync.Preferences">

    <TextView android:text="@string/username" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/username_header" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_field"
        android:layout_below="@id/username_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView android:text="@string/password" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_header"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/username_field"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_field"
        android:layout_below="@+id/password_header"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button"
        android:onClick="save_button"
        android:layout_below="@id/password_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

</RelativeLayout>
